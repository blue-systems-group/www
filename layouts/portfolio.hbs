{{> header}}

<div id="content" class="single">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8">
        <div class="row">
          <a class="anchor" id="top"></a>
          <div class="col-xs-12">
            <img src="/assets/img/group/4.jpg"
                 class="img-responsive img-rounded" alt="blue Systems Group Photo" />
          </div>
        </div>
        <div class="h1 tighttop">Teaching Portfolio</div>
        {{{ contents }}}
      </div>

      <div id="scrollspy" class="hidden-xs hidden-sm col-md-4 blue-sidebar">
